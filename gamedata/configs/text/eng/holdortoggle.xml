	<!-- ========================================== -->
	<!-- MAIN TAB OPTIONS -->
	<!-- ========================================== -->

	<!-- hot_crouch -->
	<string id="ui_mcm_mcm_holdortoggle_main_hot_crouch">
		<text>Hold or Toggle - Crouch</text>
	</string>
	<string id="ui_mcm_mcm_hot_crouch_hint">
		<text>Crouch Mode</text>
	</string>
	<string id="ui_mcm_mcm_hot_crouch_hint_desc">
		<text>Hold: Hold key to crouch (toggle OFF). Toggle: Tap to toggle crouch (toggle ON). Hold+Toggle: Both behaviors enabled (toggle ON).</text>
	</string>

	<!-- hot_walk -->
	<string id="ui_mcm_mcm_holdortoggle_main_hot_walk">
		<text>Hold or Toggle - Walk</text>
	</string>
	<string id="ui_mcm_mcm_hot_walk_hint">
		<text>Walk Mode</text>
	</string>
	<string id="ui_mcm_mcm_hot_walk_hint_desc">
		<text>Hold: Hold key to walk (toggle OFF). Toggle: Tap to toggle walk (toggle ON). Hold+Toggle: Both behaviors enabled (toggle ON).</text>
	</string>

	<!-- hot_sprint -->
	<string id="ui_mcm_mcm_holdortoggle_main_hot_sprint">
		<text>Hold or Toggle - Sprint</text>
	</string>
	<string id="ui_mcm_mcm_hot_sprint_hint">
		<text>Sprint Mode</text>
	</string>
	<string id="ui_mcm_mcm_hot_sprint_hint_desc">
		<text>Hold: Hold key to sprint (toggle OFF). Toggle: Tap to toggle sprint (toggle ON). Hold+Toggle: Both behaviors enabled (toggle ON).</text>
	</string>

	<!-- hot_lean -->
	<string id="ui_mcm_mcm_holdortoggle_main_hot_lean">
		<text>Hold or Toggle - Lean</text>
	</string>
	<string id="ui_mcm_mcm_hot_lean_hint">
		<text>Lean Mode</text>
	</string>
	<string id="ui_mcm_mcm_hot_lean_hint_desc">
		<text>Hold: Hold key to lean (toggle OFF). Toggle: Tap to toggle lean (toggle ON). Hold+Toggle: Both behaviors enabled (toggle ON).</text>
	</string>

	<!-- autowalkey -->
	<string id="ui_mcm_mcm_holdortoggle_main_autowalkey">
		<text>Autowalk Key</text>
	</string>
	<string id="ui_mcm_mcm_holdortoggle_main_autowalkey_desc">
		<text>Both the autowalk and forward/back keys will toggle autowalking off.</text>
	</string>

	<!-- modifier -->
	<string id="ui_mcm_mcm_holdortoggle_main_modifier">
		<text>Modifier</text>
	</string>

	<!-- mode -->
	<string id="ui_mcm_mcm_holdortoggle_main_mode">
		<text>Mode</text>
	</string>

	<!-- debug_logging -->
	<string id="ui_mcm_holdortoggle_debug_logging_hint">
		<text>Debug Logging</text>
	</string>
	<string id="ui_mcm_holdortoggle_debug_logging_hint_desc">
		<text>Enable debug logging for troubleshooting. Logs detailed information about inventory, PDA, and detector interactions to the game log file.</text>
	</string>

	<!-- ========================================== -->
	<!-- QOL TAB OPTIONS -->
	<!-- ========================================== -->

	<!-- hot_sprint_cancel -->
	<string id="ui_mcm_mcm_holdortoggle_qol_hot_sprint_cancel">
		<text>Alternative Sprint Canceling</text>
	</string>
	<string id="ui_mcm_mcm_holdortoggle_qol_hot_sprint_cancel_desc">
		<text>Sprinting will only cancel actions when MOVING FORWARD so you can use LSHIFT modifiers fluidly when Sprint is on LSHIFT</text>
	</string>

	<!-- opposite_lean_cancel -->
	<string id="ui_mcm_opposite_lean_cancel_hint">
		<text>Opposite Lean Cancels Current Lean</text>
	</string>
	<string id="ui_mcm_opposite_lean_cancel_hint_desc">
		<text>In Toggle/Hold+Toggle lean mode, pressing the opposite lean key will cancel the current lean instead of switching to the opposite direction. Makes it easier to cancel lean quickly.</text>
	</string>

	<!-- hot_inventory -->
	<string id="ui_mcm_holdortoggle_inventory_on_release">
		<text>Inventory on Key Release</text>
	</string>
	<string id="ui_mcm_holdortoggle_inventory_on_release_desc">
		<text>Opens inventory on key release after a short press. Hold the inventory key to use other actions (like Quick Action Wheel). Quick tap to toggle inventory open/closed. Works with whatever key you have bound to inventory in game settings.</text>
	</string>

	<!-- block_crouch_in_inventory -->
	<string id="ui_mcm_block_crouch_in_inventory_hint">
		<text>Block Crouch in Inventory</text>
	</string>
	<string id="ui_mcm_block_crouch_in_inventory_hint_desc">
		<text>Prevents crouching while holding LCTRL in inventory. Useful to avoid accidental crouching when viewing full item stats.</text>
	</string>

	<!-- pda_mode -->
	<string id="ui_mcm_pda_mode_hint">
		<text>PDA Mode</text>
	</string>
	<string id="ui_mcm_pda_mode_hint_desc">
		<text>Default: Vanilla behavior. On Release: Tap to toggle PDA. Hold to Zoom: Hold opens PDA with zoom. On Release + Zoom: Tap to open with auto-zoom.</text>
	</string>

	<!-- pda_mode list items -->
	<string id="mcm_holdortoggle_qol_pda_mode_lst_Default">
		<text>Default</text>
	</string>
	<string id="mcm_holdortoggle_qol_pda_mode_lst_On Release">
		<text>On Release</text>
	</string>
	<string id="mcm_holdortoggle_qol_pda_mode_lst_Hold to Zoom">
		<text>Hold to Zoom</text>
	</string>
	<string id="mcm_holdortoggle_qol_pda_mode_lst_On Release + Zoom">
		<text>On Release + Zoom</text>
	</string>

	<!-- restore_hands_after_pda -->
	<string id="ui_mcm_restore_hands_after_pda_hint">
		<text>Restore Hands After PDA</text>
	</string>
	<string id="ui_mcm_restore_hands_after_pda_hint_desc">
		<text>Automatically restore your weapon and detector when closing the PDA with the PDA keybind (or Escape). REQUIRES either "PDA on Key Release" OR "PDA Hold to Zoom" to be enabled. If disabled, does not interfere with PDA open/close - vanilla behavior applies.</text>
	</string>

	<!-- prevent_weapon_detector -->
	<string id="ui_mcm_prevent_weapon_with_detector_hint">
		<text>Prevent Weapon with Detector</text>
	</string>
	<string id="ui_mcm_prevent_weapon_with_detector_hint_desc">
		<text>When switching from a two-handed weapon to detector, prevents one-handed weapons from appearing alongside the detector. Goes to empty hands first, then shows detector.</text>
	</string>

	<!-- qaw_ignore_modifiers -->
	<string id="ui_mcm_qaw_ignore_modifiers_hint">
		<text>Quick Action Wheel: Ignore Modifiers on Hold</text>
	</string>
	<string id="ui_mcm_qaw_ignore_modifiers_hint_desc">
		<text>When HOLDING the QAW key, ignores modifier key state (Shift/Ctrl/Alt). Simple press still respects modifiers. Useful if you want long-press to always work even while holding sprint or other modifier keys.</text>
	</string>

	<!-- qaw_close_with_reload -->
	<string id="ui_mcm_qaw_close_with_reload_hint">
		<text>Quick Action Wheel: Close with Reload Key</text>
	</string>
	<string id="ui_mcm_qaw_close_with_reload_hint_desc">
		<text>When QAW is open: Reload key (R) will close the QAW menu.</text>
	</string>

