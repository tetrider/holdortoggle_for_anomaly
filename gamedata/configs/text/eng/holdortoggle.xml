	<!-- stance_system -->
	<string id="ui_mcm_mcm_stance_system_hint">
		<text>Stance System Type</text>
	</string>
	<string id="ui_mcm_mcm_stance_system_hint_desc">
		<text>Vanilla Prone: Crouch+walk = prone.&#10;Fluid Stance: Dedicated prone key. NO crouch+walk=prone.&#10;Progressive Stance: Hold crouch to prone.</text>
	</string>

	<!-- hot_prone -->
	<string id="ui_mcm_mcm_holdortoggle_stance_hot_prone">
		<text>Prone Key Mode</text>
	</string>
	<string id="ui_mcm_mcm_holdortoggle_stance_hot_prone_desc">
		<text>Enables a dedicated prone keybind. Prone activates both crouch and walk. You can also exit prone by pressing crouch or walk keys. REQUIRES Hold or Toggle - Crouch AND Hold or Toggle - Walk to be enabled.</text>
	</string>
	<string id="ui_mcm_mcm_hot_prone_hint">
		<text>Prone Key Mode</text>
	</string>
	<string id="ui_mcm_mcm_hot_prone_hint_desc">
		<text>Disabled: No prone key. Hold: Hold key to go prone. Toggle: Tap to toggle prone. Hold+Toggle: Both behaviors enabled.</text>
	</string>

	<!-- pronekey -->
	<string id="ui_mcm_mcm_holdortoggle_stance_pronekey">
		<text>Prone Key</text>
	</string>
	<string id="ui_mcm_mcm_holdortoggle_stance_pronekey_desc">
		<text>The key to activate prone mode (crouch + walk)</text>
	</string>

	<!-- unbind_pronekey -->
	<string id="ui_mcm_mcm_holdortoggle_stance_unbind_pronekey">
		<text>Unbind Prone Key</text>
	</string>

	<!-- prog_hold_time_mode -->
	<string id="ui_mcm_mcm_prog_hold_time_mode_hint">
		<text>Progressive Hold Time Mode</text>
	</string>
	<string id="ui_mcm_mcm_prog_hold_time_mode_hint_desc">
		<text>Use MCM Hold Time: Uses the global MCM hold time setting. Custom Delay: Set a specific delay for progressive prone detection.</text>
	</string>

	<!-- prog_hold_time_custom -->
	<string id="ui_mcm_mcm_prog_hold_time_custom_hint">
		<text>Progressive Hold Delay</text>
	</string>
	<string id="ui_mcm_mcm_prog_hold_time_custom_hint_desc">
		<text>How long (in milliseconds) you must hold the crouch key to trigger stance transitions. Controls: standing to prone, crouch to prone, and prone to standing. Lower = faster transitions, higher = easier to tap without accidentally changing stance.</text>
	</string>

